# Production Environment Variables
# Copy this file to .env.prod for production deployments

# Production profile
COMPOSE_PROFILES=production

# PostgreSQL Database - Use external database in production
POSTGRES_DB=gomoku_db
POSTGRES_USER=gomoku_user
POSTGRES_PASSWORD=your_very_secure_production_password_here
# Don't expose PostgreSQL port in production
# POSTGRES_PORT=

# Backend API
DEBUG=false
SECRET_KEY=your-production-secret-key-use-openssl-rand-hex-32
API_PORT=8000

# Remove pgAdmin in production
# PGADMIN_* variables not needed