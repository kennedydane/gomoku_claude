# Docker Compose Environment Variables
# Copy this file to .env and customize the values

# PostgreSQL Database
POSTGRES_DB=gomoku_db
POSTGRES_USER=gomoku_user
POSTGRES_PASSWORD=your_secure_password_here_change_this
POSTGRES_PORT=5432

# pgAdmin (only for development/admin profiles)
PGADMIN_DEFAULT_EMAIL=admin@gomoku.com
PGADMIN_DEFAULT_PASSWORD=your_secure_pgadmin_password_change_this
PGADMIN_PORT=5050

# Backend API
DEBUG=false
SECRET_KEY=your-secret-key-change-this-in-production-use-openssl-rand-hex-32
API_PORT=8000

# Development overrides
COMPOSE_PROFILES=development

# Production overrides (use a separate .env.prod file)
# COMPOSE_PROFILES=production
# DEBUG=false
# POSTGRES_PORT=  # Don't expose PostgreSQL port in production