# Gomoku Frontend Configuration
# Copy this file to .env and customize your settings

# Server Configuration
GOMOKU_BASE_URL=http://localhost:8001
GOMOKU_TIMEOUT=30.0

# Authentication Settings
GOMOKU_AUTO_REFRESH_TOKEN=true
GOMOKU_MAX_RETRIES=3

# Device Information
GOMOKU_DEFAULT_DEVICE_NAME=Desktop App

# Logging and Debugging
GOMOKU_LOG_LEVEL=INFO
GOMOKU_DEBUG_MODE=false

# Security Settings
GOMOKU_SAVE_CREDENTIALS=true
GOMOKU_ENCRYPT_CREDENTIALS=false

# Development/Production Overrides
# Uncomment and modify for different environments
# GOMOKU_BASE_URL=https://api.gomoku.example.com  # Production
# GOMOKU_LOG_LEVEL=DEBUG                          # Development
# GOMOKU_TIMEOUT=60.0                             # Slower connections