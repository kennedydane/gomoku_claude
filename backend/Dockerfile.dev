# Development Dockerfile for FastAPI backend with hot reload
FROM python:3.11-slim as development

# Set environment variables
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PIP_NO_CACHE_DIR=1 \
    PIP_DISABLE_PIP_VERSION_CHECK=1 \
    UV_CACHE_DIR=/tmp/uv-cache

# Install system dependencies with development tools
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    git \
    build-essential \
    && rm -rf /var/lib/apt/lists/* \
    && apt-get clean

# Install uv
RUN pip install --no-cache-dir uv

# Create non-root user for development
RUN groupadd -r devuser && useradd -r -g devuser -d /app -s /bin/bash devuser

# Set working directory
WORKDIR /app

# Copy dependency files first for better layer caching
COPY --chown=devuser:devuser pyproject.toml README.md ./

# Create virtual environment and install dependencies (including dev dependencies)
RUN uv sync --frozen && rm -rf /tmp/uv-cache

# Create necessary directories
RUN mkdir -p /app/logs /app/static /app/.mypy_cache && \
    chown -R devuser:devuser /app

# The source code will be mounted as a volume in development
# This allows for hot reloading

# Switch to non-root user
USER devuser

# Expose port
EXPOSE 8000

# Command with hot reload and development settings
CMD ["uv", "run", "uvicorn", "backend.main:app", \
     "--host", "0.0.0.0", \
     "--port", "8000", \
     "--reload", \
     "--reload-dir", "/app/src", \
     "--log-level", "debug"]